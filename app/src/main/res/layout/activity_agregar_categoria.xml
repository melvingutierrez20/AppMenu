<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E18F8F">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:text="AGREGAR CATEGORIA"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:background="#A65B64"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAviso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="70dp"
        android:gravity="center"
        android:text="La imagen se tiene que subir desde una computadora al servidor."
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitulo" />

    <EditText
        android:id="@+id/etNomCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="100dp"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:hint="NOMBRE CATEGORÍA"
        android:minHeight="48dp"
        android:singleLine="true"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAviso" />






</androidx.constraintlayout.widget.ConstraintLayout>
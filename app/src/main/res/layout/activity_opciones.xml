<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baseRosa"
    android:columnCount="2"
    android:rowCount="5"
    android:gravity="center">

    <!-- TextView de Bienvenida -->
    <TextView
        android:id="@+id/tvBienvenido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BIENVENIDO"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <!-- Contenedor para las imágenes 1 y 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2">

        <!-- Primera Imagen y Texto -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgCategoria"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/img_4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="CATEGORIAS"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Segunda Imagen y Texto -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginStart="35dp">

            <ImageView
                android:id="@+id/imgOrden"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/img_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADMINISTRADOR"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <!-- Contenedor para las imágenes 3 y 4 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="2">

        <!-- Tercera Imagen y Texto -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgHistorial"
                android:layout_width="138dp"
                android:layout_height="139dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/img_7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HISTORIAL"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Cuarta Imagen y Texto -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginStart="35dp">

            <ImageView
                android:id="@+id/imgProductos"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/img_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PLATILLOS Y PRODUCTOS"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <!-- ImageView y TextView de Salir -->
    <ImageView
        android:id="@+id/btnSalir"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/baseline_logout_24"
        android:layout_gravity="center"
        android:contentDescription="Salir"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_marginTop="16dp"/>
</GridLayout>
